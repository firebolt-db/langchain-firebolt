# Firebolt Integration Test Configuration
# Copy this file to .env and fill in your actual values
# The .env file is ignored by git to keep your credentials secure

# Required: Firebolt authentication credentials
FIREBOLT_CLIENT_ID=your_firebolt_client_id_here
FIREBOLT_CLIENT_SECRET=your_firebolt_client_secret_here

# Required: Firebolt connection details
FIREBOLT_ENGINE=your_engine_name
FIREBOLT_DB=your_database_name
FIREBOLT_ACCOUNT=your_account_name

# Optional: Table and index configuration
# Defaults to "test_table" if not specified
FIREBOLT_TABLENAME=test_table
# Defaults to "{tablename}_index" if not specified
FIREBOLT_INDEX=test_table_index
# Defaults to 256 if not specified
FIREBOLT_EMBEDDING_DIMENSIONS=256

# Optional: LLM location for SQL-based embeddings
# Only needed if use_sql_embeddings=True
FIREBOLT_LLM_LOCATION=location_name

# Optional: Cleanup behavior
# Set to "true" to drop the test table after tests complete
# Defaults to "false" if not specified
FIREBOLT_CLEANUP_TABLE=false


# Optional: AWS credentials for creating LOCATION object
# Required if you want the test fixture to automatically create the LOCATION object
# The LOCATION object is used for SQL-based embeddings (AI_EMBED_TEXT), 
# so credentials must have access to Amazon Bedrock
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
# Optional: AWS session token (only needed for temporary credentials)
AWS_SESSION_TOKEN=your_aws_session_token

# Optional: Custom API endpoint
# If not specified, uses the default Firebolt cloud service API endpoint
FIREBOLT_API_ENDPOINT=
FIREBOLT_BATCH_SIZE=32
